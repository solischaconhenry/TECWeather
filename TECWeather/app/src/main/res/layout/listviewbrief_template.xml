<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="0.06">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Grados"
            android:id="@+id/grados"
            android:textSize="30dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView"
            android:src="@drawable/windy_day"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Velocidadmph"
            android:id="@+id/velocidad"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginStart="23dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView2"
            android:src="@drawable/humedity"
            android:layout_below="@+id/imagenEstado"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="humedad"
            android:id="@+id/humedad"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignStart="@+id/velocidad" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imagenEstado"
            android:src="@drawable/rain_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/fecha"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/imagenEstado"
            android:layout_marginEnd="54dp" />

    </RelativeLayout>
</LinearLayout>